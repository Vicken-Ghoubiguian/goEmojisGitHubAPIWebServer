{{define "main"}}
<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<link rel="icon" href="../assets/images/favicon.png" type="image/png">
		<title>{{.Title}}</title>
	</head>
	<body>
	   <p style="color: red;">Hello world !</p>
       <div>
            <table>
                <thead>
                    <tr>
                        <th colspan="2" style="color: purple;">This is emojis table</th>
                    </tr>
                </thead>
                <tbody>
                    {{ range $key, $value := .ListOfEmojisFromGitHub }}
                        <tr><td>{{ $key }}</td><td><img src='{{ $value }}' alt='{{ $key }}'></td></tr>
                    {{ end }}
                </tbody>
            </table>
       </div>
	</body>
</html>
{{end}}
